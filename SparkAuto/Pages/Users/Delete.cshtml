@page
@model SparkAuto.Pages.Users.DeleteModel
@{
}
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete User</h2>
<br />
<form method="post">
    <input type="hidden" asp-for="ApplicationUser.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ApplicationUser.Name"></label>
        </div>
        <div class="col-5">
            <input asp-for="ApplicationUser.Name" style="width:100%" disabled="disabled" />
            <span asp-validation-for="ApplicationUser.Name" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ApplicationUser.Email"></label>
        </div>
        <div class="col-5">
            <input asp-for="ApplicationUser.Email" style="width:100%" disabled="disabled" />
            <span asp-validation-for="ApplicationUser.Email" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ApplicationUser.PhoneNumber"></label>
        </div>
        <div class="col-5">
            <input asp-for="ApplicationUser.PhoneNumber" style="width:100%" disabled="disabled" />
            <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ApplicationUser.Address"></label>
        </div>
        <div class="col-5">
            <input asp-for="ApplicationUser.Address" style="width:100%" disabled="disabled" />
            <span asp-validation-for="ApplicationUser.Address" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ApplicationUser.City"></label>
        </div>
        <div class="col-5">
            <input asp-for="ApplicationUser.City" style="width:100%" disabled="disabled" />
            <span asp-validation-for="ApplicationUser.City" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ApplicationUser.PostalCode"></label>
        </div>
        <div class="col-5">
            <input asp-for="ApplicationUser.PostalCode" style="width:100%" disabled="disabled"/>
            <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-2 col-5">
            <partial name="_DeleteAndBackToListButton" />
        </div>
    </div>
</form>
