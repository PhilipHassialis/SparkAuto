@page
@model SparkAuto.Pages.Cars.CreateModel
@{
}
<br />
<h2 class="text-info">Add New Car</h2>
<br />
<form method="post">
    <div class="border backgroundwhite">
        <input hidden asp-for="Car.UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.VIN" style="width:100%" />
                <span asp-validation-for="Car.VIN" class="text-danger" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Make" style="width:100%" />
                <span asp-validation-for="Car.Make" class="text-danger" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Model" style="width:100%" />
                <span asp-validation-for="Car.Model" class="text-danger" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Style" style="width:100%" />
                <span asp-validation-for="Car.Style" class="text-danger" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Color" style="width:100%" />
                <span asp-validation-for="Car.Color" class="text-danger" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Year" style="width:100%" />
                <span asp-validation-for="Car.Year" class="text-danger" />
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-2 col-5">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
